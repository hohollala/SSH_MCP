# SSH MCP Server Configuration

# Server Configuration
SSH_MCP_DEBUG=false
SSH_MCP_MAX_CONNECTIONS=10
SSH_MCP_TIMEOUT=30
SSH_MCP_LOG_LEVEL=INFO

# MCP Protocol Configuration
SSH_MCP_PROTOCOL_VERSION=2024-11-05
SSH_MCP_SERVER_NAME=ssh-mcp-server
SSH_MCP_SERVER_VERSION=0.1.0

# Connection Configuration
SSH_MCP_CONNECTION_TIMEOUT=30
SSH_MCP_COMMAND_TIMEOUT=60
SSH_MCP_RECONNECT_ATTEMPTS=3
SSH_MCP_RECONNECT_DELAY=5

# Security Configuration
SSH_MCP_ALLOW_PASSWORD_AUTH=true
SSH_MCP_ALLOW_AGENT_AUTH=true
SSH_MCP_ALLOW_KEY_AUTH=true

# Logging Configuration
SSH_MCP_LOG_FILE=
SSH_MCP_LOG_FORMAT=%timestamp% - %name% - %level% - %message% 